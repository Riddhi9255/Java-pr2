public class Circle {
    private double radius;
    private double area;

    // Constructor to initialize radius
    public Circle(double radius) {
        this.radius = radius;
    }

    // Method to calculate area
    public void calculateArea() {
        this.area = Math.PI * radius * radius;
    }

    // Method to get area
    public double getArea() {
        return area;
    }

    public static void main(String[] args) {
        String enrollNumber = "2201030318035";
        String name = "Memdavadi Riddhi";
        
        double radius = 5.0;

        // Creating an instance of Circle with radius
        Circle circle = new Circle(radius);

        // Calculating area
        circle.calculateArea();

        // Getting and printing the area
        System.out.println("Enroll: " + enrollNumber + ", Name: " + name + ", Area of circle with radius " + radius + " is: " + circle.getArea());
    }
}
